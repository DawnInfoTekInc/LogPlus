<?xml version="1.0" encoding="UTF-8"?>
<!-- <Configuration  status="DEBUG" packages="com.test">   -->
<Configuration  status="TRACE" packages="com.dawninfotek.logx.extension.log4j2">
	<Appenders>
        <RollingFile name="json_file_appender" fileName="D:\jsonlogger.json"
                     filePattern="${log-path}/%d{yyyyMMdd}_jsonlogger-%i.json" >
            <LogXJsonLayout/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1 KB" />
            </Policies>
            <DefaultRolloverStrategy max="4"/>
        </RollingFile>
    </Appenders>
    
    <Appenders>
	    <Console name="ConsoleJSONAppender" target="SYSTEM_OUT">
	    	<LogXJsonLayout/>
	    </Console>
	</Appenders>

    <Loggers>
        <root level="debug" additivity="false">
            <AppenderRef ref="ConsoleJSONAppender"/>
        </root>
    </Loggers>
</Configuration>